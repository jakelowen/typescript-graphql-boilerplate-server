  },
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "test-server": "NODE_ENV=test ts-node src/index.ts",
    "gen-schema-types": "ts-node src/scripts/createTypes.ts",
    "psql": "psql -U postgres graphql-ts-server-boilerplate",
    "test": "NODE_ENV=test jest --forceExit --watch --runInBand"
  },
  "jest": {
    "globalSetup": "./src/testSetup/callSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
